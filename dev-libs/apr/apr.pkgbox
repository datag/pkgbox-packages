# pkgbox: Apache Portable Runtime
PKGBOX_API=1

# Building on UNIX: http://apr.apache.org/compiling_unix.html

pkgVer 1.4.6

DESCRIPTION="Apache Portable Runtime"
HOMEPAGE="http://apr.apache.org/"
SRC_URI="http://mirror.synyx.de/apache/$PN/$P.tar.bz2"
#SCM_URI="http://svn.apache.org/repos/asf/apr/$PN/"
FEATURES=(
	"layout=GNU"
	"devrandom=/dev/urandom"
	"ipv6"
)

#src_prepare() {
#	pkgUseScm && ./buildconf || :
#}

src_configure() {
	pkgConfigure \
		$(pkgEnable layout)	\
		--enable-nonportable-atomics	\
		--enable-threads	\
		$(pkgEnable ipv6)	\
		$(pkgWith devrandom)
}


# pkgbox: Apache Portable Runtime Utility
PKGBOX_API=1

# Building on UNIX: http://apr.apache.org/compiling_unix.html

pkgVer 1.5.1

DESCRIPTION="Apache Portable Runtime Utility"
HOMEPAGE="http://apr.apache.org/"
SRC_URI="http://mirror.synyx.de/apache/apr/$P.tar.bz2"
#SCM_URI="http://svn.apache.org/repos/asf/apr/$PN/"
FEATURES=(
	"apr=${O[prefix]}"		# prefix to apr or path to apr-config
	"layout=GNU"
)

#src_prepare() {
#	pkgUseScm && ./buildconf || :
#}

src_configure() {
	pkgConfigure \
		$(pkgWith apr) \
		$(pkgEnable layout) \
		--without-berkeley-db \
		--without-sqlite2 \
		--without-freetds \
		--without-gdbm \
		--without-ldap \
		--without-mysql \
		--without-nss \
		--without-odbc \
		--without-openssl \
		--without-pgsql \
		--without-sqlite3
}

